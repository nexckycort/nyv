---
export interface Props {
  size?: number;
}

const { size = 80 } = Astro.props;
---

<svg
  width={size}
  height={size}
  viewBox="0 0 100 100"
  fill="none"
  xmlns="http://www.w3.org/2000/svg"
  aria-label="nyv logo"
>
  {/* outer hexagon */}
  <polygon
    points="50,2 93,27 93,73 50,98 7,73 7,27"
    fill="none"
    stroke="hsl(var(--foreground))"
    stroke-width="2"></polygon>
  {/* inner hexagon */}
  <polygon
    points="50,20 76,37 76,63 50,80 24,63 24,37"
    fill="none"
    stroke="hsl(var(--foreground))"
    stroke-width="1.5"></polygon>
  {/* core diamond */}
  <polygon points="50,34 62,50 50,66 38,50" fill="hsl(var(--foreground))"
  ></polygon>
</svg>
